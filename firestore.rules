/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for a personal media library application.
 * All data is nested under /users/{userId}, ensuring that each user can only access their own data.
 * Key Security Decisions:
 *  - Users can only access data under their own user ID.
 *  - The data schema itself is not strictly enforced to allow for rapid prototyping.
 *  - All writes are validated against the authenticated user's ID.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to media items owned by a specific user.
     * @path /users/{userId}/mediaItems/{mediaItemId}
     * @allow (create) User 'user_abc' can create a media item under /users/user_abc/mediaItems/item_123 if the mediaItem.id is 'item_123'.
     * @deny (create) User 'user_xyz' cannot create a media item under /users/user_abc/mediaItems/item_123.
     * @allow (get) User 'user_abc' can get a media item at /users/user_abc/mediaItems/item_123.
     * @deny (get) User 'user_xyz' cannot get a media item at /users/user_abc/mediaItems/item_123.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/mediaItems/{mediaItemId} {
      // Allow reads to anyone who is signed in.
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);

      // Allow the user to create a media item if they are the owner and the mediaItemId matches the id field.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == mediaItemId;

      // Allow the user to update a media item if they are the owner.
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;

      // Allow the user to delete a media item if they are the owner.
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to tags created by a specific user.
     * @path /users/{userId}/tags/{tagId}
     * @allow (create) User 'user_abc' can create a tag under /users/user_abc/tags/tag_123 if the tag.id is 'tag_123'.
     * @deny (create) User 'user_xyz' cannot create a tag under /users/user_abc/tags/tag_123.
     * @allow (get) User 'user_abc' can get a tag at /users/user_abc/tags/tag_123.
     * @deny (get) User 'user_xyz' cannot get a tag at /users/user_abc/tags/tag_123.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/tags/{tagId} {
      // Allow reads to anyone who is signed in if they are the owner.
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);

      // Allow the user to create a tag if they are the owner and the tagId matches the id field.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == tagId;

      // Allow the user to update a tag if they are the owner.
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;

      // Allow the user to delete a tag if they are the owner.
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
  }
}